mixin leave-message(imageSize)
	.leave-message
		.leave-message-top
			.leave-message-top-column
				a(href="#" title="").leave-message-top__control
					i.fa.fa-arrow-left
			.leave-message-top-column
				.leave-message-top-center
					.leave-message-top-center__image
						img(src="http://placehold.it/#{imageSize}" alt="")
					a(href="#" title="").leave-message-top-center__name Инна С.
			.leave-message-top-column
				+search
		.leave-message-column
			+message-block-second('56x56')
		.leave-message-column
			+message-block-second('56x56')
		.leave-message-column
			+message-block-second('56x56')
		.leave-message-column
			+message-block-second('56x56')
	+write-message('56x56')

